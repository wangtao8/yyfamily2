}
.circle-info{
  height: 112rpx;
  position: absolute;
  top: 0;
  left: 178rpx;
  width: 300rpx;
}
.circle-updated{
  position: absolute;
  bottom: -60rpx;
  left: 0rpx;
  height: 112rpx;
  line-height: 112rpx;
  color: #fe5431;
  font-size: 30rpx;
}
.circle-updated>image{
  width: 26rpx;
  height: 26rpx;
  position: relative;
