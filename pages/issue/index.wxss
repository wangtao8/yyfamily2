.lave {
  position: absolute;
  right: 4rpx;
  bottom: 0rpx;
  color: #cccccc;
  font-size: 24rpx;
}

.ImgInfo>image:nth-child(1) {
  width: 218rpx;
  height: 218rpx;
}

.issue {
  height: 92rpx;
  width: calc(100% + 20rpx);
  text-align: center;
  line-height: 92rpx;
  color: #fff;
  font-size: 32rpx;
  background-color: #00bf8e;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}

.clear::after {
  content: '';
  display: block;
  clear: both;
}
