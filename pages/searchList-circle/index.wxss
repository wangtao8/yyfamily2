/* pages/searchList/index.wxss */
.my-circles{
  padding: 0rpx 20rpx;
}
.my-circle{
  color: #070707;
  margin-bottom: 32rpx;
  font-size: 34rpx;
}
.my-circle::before, .hot-circle::before{
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  border-radius: 15rpx;
  background-color: #00bf8e;
  position: relative;
  top: 4rpx;
  margin-right: 10rpx;
}
.hot-circle{
  font-size: 34rpx;
}
.circle-title{
  font-size: 32rpx;
}
.circle{
  font-size: 24rpx;
  position: relative;
  margin-bottom: 34rpx;
}
.circle::after{
  content: '';
  display: block;
  width: 100%;
  height: 1rpx;
  background: #ccc;
  position: relative;
  top: 17rpx;
}
.circle-img{
  width: 150rpx;
  height: 140rpx;
  border-radius: 5rpx;
  display: inline-block;
}
.circle-depict{
  color: #999999;
  font-size: 28rpx;
}
.circle-info{
  height: 112rpx;
  position: absolute;
  top: 0;
  left: 178rpx;
  width: 300rpx;
}
.circle-updated{
  position: absolute;
  bottom: -60rpx;
  left: 0rpx;
  height: 112rpx;
  line-height: 112rpx;
  color: #fe5431;
  font-size: 30rpx;
}
.circle-updated>image{
  width: 26rpx;
  height: 26rpx;
  position: relative;
  top: 2rpx;
  left: 10rpx;
}