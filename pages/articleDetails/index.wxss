/* pages/articleDetails/index.wxss */
.top-title{
  font-size: 48rpx;
  font-weight: bold;
}
.top-label{
  font-size: 36rpx;
  color: #58d0a5;
  margin: 40rpx 0rpx;
}
.contaner{
  margin-bottom: 40rpx;
}
.banner{
  height: 400rpx;
  width: 100%;
}
.article-recommend, .commodity-recommend{
  margin: 0rpx 40rpx;
}
.article-recommend::before, .commodity-recommend::before{
  content: '';
  display: block;
  width: calc(100% + 80rpx);
  margin-left: -40rpx;
  height: 2rpx;
  background: #ccc;
}
.content-scorll{
  width: 700rpx;
  white-space: nowrap;
}
.content{
  width: 438rpx;
  height: 360rpx;
  background: #fff;
  /* border-radius: 8rpx; */
  display: inline-block;
  margin-right: 30rpx;
  margin-bottom: 40rpx;
  /* border-bottom: 2rpx solid #ccc; */
}
.content-img{
  width: 100%;
  height: 220rpx;
}
.content-img>image{
  width: 100%;
  height: 100%;
  border-top-left-radius:8rpx;
  border-top-right-radius:8rpx;
}
.content-title{
  font-weight: 600;
  font-size: 32rpx;
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  padding: 20rpx;
  border: 2rpx solid #ccc;
  border-top: none;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
   /* border-radius: 8rpx;  */
  white-space: pre-wrap;
}
.article-title, .commodity-title{
  font-weight: bold;
  font-size: 36rpx;
  margin: 40rpx 0rpx;
}
.commodity-content{
  width: 220rpx;
  height: 370rpx;
  display: inline-block;
  margin-right: 20rpx;
  /* background: #f7f7f7; */
}
.commodity-image{
  width: 100%;
  height: 220rpx;
}
.commodity-image>image{
  width: 100%;
  height: 100%;
}
.commodity-info{
  font-size: 32rpx;
}
.description{
  font-size: 28rpx;
  height: 78rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  margin: 16rpx 0rpx;
  white-space: initial;
}
.money{
  text-align: center;
  font-size: 28rpx;
}
.commodity-scorll{
  white-space: nowrap;
}
.bottom-nav{
  width: 100%;
  height: 88rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  box-sizing: border-box;
  padding-top: 12rpx;
}
.bottom-nav>view{
  width: 44rpx;
  height: 88rpx;
  position: relative;
}
.bottom-nav>view>image, .ShareAppMessage>image{
  width: 44rpx;
  height: 44rpx;
}
.bottom-nav>view>text, .ShareAppMessage>text{
  width: 44rpx;
  text-align: center;
  position: absolute;
  bottom: 16rpx;
  left: 0rpx;
  font-size: 24rpx;
}
.ShareAppMessage{
  background: #fff;
  border: 1rpx solid #fff;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  opacity: 0;
}
page{
  height: 100%;
}